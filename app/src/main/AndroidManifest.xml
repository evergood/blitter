<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.soutullo.blitter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.activity.AssignationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".view.activity.BillPersonTraceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".view.activity.BillSummaryActivity"/>

        <activity android:name=".view.activity.FinalResultActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.ManualTranscriptionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".view.activity.AssignationIntroActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>